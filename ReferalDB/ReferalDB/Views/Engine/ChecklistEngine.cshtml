                        }


                        <span style="color: red">*</span>

                        @* @Html.TextBoxFor(m => Model.ChecklistEngineName, new { @style = "width:80%;margin-top:2%;" })*@
                        @(Html.DropDownList("DdlType", ChecklistHeader, "---------Select---------", new { @style = "width:72%;margin-top:2%;" }))

                    </td>

                    <td>

