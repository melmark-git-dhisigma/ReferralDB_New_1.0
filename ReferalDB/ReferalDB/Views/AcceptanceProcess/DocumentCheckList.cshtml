                        <input type="button" name="Save" value="Submit" id="SubmitDocumentChecklist" onclick="checkall(event);" />
                    }
                    <input type="submit" name="Save" value="Save" id="SaveDocumentChecklist" />
                </td>
            </tr>
        </table>

    </div>
   
      
