                                                <div style="cursor: pointer;">New</div>
                                            </td>
                                        </tr>
                                        <tr>

                                            <td colspan="2">

                                                <table style="width:100%" id='@string.Concat(itemlist.LetterEngineId, "chk")'>

                                                    @foreach (var item in Model.ContentlistItem)
                                                    {
