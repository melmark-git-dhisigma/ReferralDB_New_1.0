                                {
                                    if (itemlist.LetterEngineType == "Check")
                                    {
                                    <table style="width: 100%">
                                        <tr style="background-color: #1EB53A; color: white; height: 35px; font-size: 15px; font-weight: bold">
                                            <td style="width: 80%">
                                                @itemlist.LetterEngineName
